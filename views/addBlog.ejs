<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('./partials/head') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blog Page</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <form class="container mt-3" action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Body</label>
          <textarea class="form-control" placeholder="Leave a comment here" name="body" id="body"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label" for="coverImage">Upload Image</label>
            <input type="file" class="form-control" name="coverImageURL" id="coverImageURL">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    <%- include('./partials/scripts') %>
</body>
</html>